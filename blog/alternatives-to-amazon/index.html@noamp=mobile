<script>

  jQuery(function( $ ){
	  
	  

     $(window).scroll(function() {    
      var scroll = $(window).scrollTop();

      if (scroll >= 60) {
        
         $(".site-header").addClass("scrolling");
     
         
      } else {
        
          $(".site-header").removeClass("scrolling");
        
      
      }
    });


    $(".toggle-wrap").click(function(){

        $(".mobile-menu-wrap").slideToggle();

    });

    $('.count-1').each(function () {
        $(this).prop('Counter',10000).animate({
            Counter: $(this).text()
        }, {
            duration: 2000,
            easing: 'swing',
            step: function (now) {
                //$(this).text(Math.ceil(now));
              now = Number(Math.ceil(now)).toLocaleString('en');
            $(this).text(now);
            }
        });
    });

    $('.count-2').each(function () {
        $(this).prop('Counter',100000).animate({
            Counter: $(this).text()
        }, {
            duration: 2000,
            easing: 'swing',
            step: function (now) {
                //$(this).text(Math.ceil(now));
              now = Number(Math.ceil(now)).toLocaleString('en');
            $(this).text(now);
            }
        });
    });

    
    $('.review-section .blocks').slick({
       
        dots: false,
        infinite: true,
        speed: 500,
        fade: true,
        cssEase: 'linear',
         adaptiveHeight: true,
    });

    $('.sidebar-testimonial-blocks').slick({
       
        dots: false,
        infinite: true,
        speed: 500,
        fade: true,
        cssEase: 'linear',
        adaptiveHeight: true,
    });


     $('.testimonial-section .blocks').slick({
       
        dots: false,
        infinite: true,
        slidesToShow: 3,
        slidesToScroll: 3,
        adaptiveHeight: true,
        responsive: [
        {
          breakpoint: 1023,
          settings: {

            slidesToShow: 2,
            slidesToScroll: 1,

          }
        },
        {
          breakpoint: 767,
          settings: {
            slidesToShow: 1
          }
        }, 
        {
          breakpoint: 480,
          settings: {
            arrows: false,
            slidesToShow: 1,
            
          }
        }
      ]
    });


    

     $(window).scroll(function() {
        if ($(this).scrollTop() > 150) {
            $('.scroll-up').fadeIn();
            
        } else {
            $('.scroll-up').fadeOut();
        }
    });

    $('.scroll-up').click(function() {
        $("html, body").animate({
            scrollTop: 0
        }, 600);
        return false;
    });


    $(".faq .question").click(function(){
            
        $(this).closest('.faq .block').find('.answer').slideToggle(200);
            
        $(".faq .question").not(this).removeClass('active');
            
        $(this).toggleClass('active');

        $(this).parent().siblings().children().next().slideUp(200);
            
        return false;
        
    });
    
    $('.search-icon > a').removeAttr("href");
     $('.search-icon').on('click', function(){
        $(".popup-search").show();
     });
	 
	 

      $('.popup-search #close').on('click', function(){
        $(".popup-search").hide();
        
     });

    
  });
</script>
	
